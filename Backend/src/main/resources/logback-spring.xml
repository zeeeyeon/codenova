<configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/app/logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/app/logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                level=%-5level time=%d{yyyy-MM-dd'T'HH:mm:ss.SSS} thread=%thread logger=%logger{36} msg=%msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                level=%-5level time=%d{yyyy-MM-dd'T'HH:mm:ss.SSS} thread=%thread logger=%logger{36} msg=%msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="kr.codenova" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
